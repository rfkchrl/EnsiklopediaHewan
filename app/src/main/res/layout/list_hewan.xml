<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="6dp">


    <!-- ImageView  -->
    <ImageView
        android:id="@+id/img_hewan"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp"
        android:background="@drawable/albatros" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:layout_marginLeft="7dp"
        android:orientation="vertical">

        <!-- TextView Nama hewan  -->
        <TextView
            android:id="@+id/hewan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Albatros"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- TextView deskripsi hewan  -->
        <TextView
            android:id="@+id/hewan_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Albatros adalah burung laut yang terbesar. Ia berdatahan hidup dibumi bagian selatan yang dingin"
            android:textSize="12sp"
            android:textStyle="italic" />

    </LinearLayout>
</LinearLayout>